{
  "version": 2,
  "builds": [
    { "src": "api/**/*.py", "use": "@vercel/python" },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    {
      "src": "/(.*\\.[jt]s)",
      "headers": { "content-type": "application/javascript" }
    },
    {
      "src": "/(.*\\.js\\.map)",
      "headers": { "content-type": "application/json" }
    },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
